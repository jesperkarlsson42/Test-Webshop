<body class="bodyRegister">
   
<div class="registerContainer">
<h2 class="registerHeading">Register</h2>


<form method="post" action="/register" class="registerForm">
    
<input type="text" name="username" class="registerInput" placeholder="username" required minlength="4" id="username">
<input type="email" name="email" class="registerInput" placeholder="email@email.com" required>
<input type="password" name="password" class="registerInput" placeholder="****" required minlength="4" id="password">
<button type="submit" class="registerBtn">register</button>


</form>

</div>

</body>